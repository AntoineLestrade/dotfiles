[user]
  name = Antoine Lestrade
  email = {{ .email }}
[diff]
  tool = gvimdiff
[alias]
  d = difftool
  prettylog = log --pretty=oneline --graph --all --decorate --abbrev-commit
  last = log -1 --stat
  cp = cherry-pick
  #co = checkout
  ff = pull --ff-only
  rst = restore
  cl = clone
  ci = commit
  st = status -sbu
  br = branch
  prune = remote prune origin
  autosq = rebase -i --autosquash origin/develop
  sw = switch
  unstage = reset HEAD --
  dc = diff --cached
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %Cblue<%an>%Creset' --abbrev-commit --date=relative --all
[difftool]
  prompt = false
[core]
  autocrlf = false
  editor = vim
  filemode = false
  autocrlf = false
[push]
  autoSetupRemote = true
  #default = matching
[color]
  ui = true
[credential]
  helper = cache --timeout=3600
[merge]
  tool = vimdiff
[mergetool]
  keeptemporaries = false
  keepbackups = false
  prompt = false
  trustexitcode = false

